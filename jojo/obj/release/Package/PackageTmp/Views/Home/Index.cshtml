@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/image/jojo.ico">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <title>JoJo</title>
    <style>
        .mypanel {
            min-height: 440px;
        }
    </style>
</head>
<body>
    <br />
    <div class="container text-center">
        <h1 class="text-primary">JoJo</h1>
        <h3 class="text-success">Fresh & Healthy Fruit Drinks</h3>
    </div>
    <br /><br />
    <div class="container">
        <div class="row">

            <div class="col-sm-offset-3 col-sm-6">
                <div class="panel panel-info mypanel">
                    <div class="panel-heading"><h3 class="panel-title">Đăng nhập</h3></div>
                    <div class="panel-body">
                        <div class="text-center">
                            <img src="/image/logo9.png">
                        </div>
                        <br><br>
                        <form class="form-horizontal" action="/Home/Login" method="post">
                            <div class="form-group">
                                <label class="control-label col-sm-3">Tài khoản</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="taikhoan" name="taikhoan">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">Mật khẩu</label>
                                <div class="col-sm-7">
                                    <input type="password" class="form-control" id="matkhau" name="matkhau">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3"></label>
                                <div class="col-sm-7">
                                    <input type="submit" class="form-control btn-primary" value="Đăng Nhập">
                                </div>
                            </div>
                        </form>
                        <br><br>
                    </div>
                </div>

            </div>
        </div>

    </div>


    @RenderPage("/Views/Share/footer.cshtml")
</body>

</html>

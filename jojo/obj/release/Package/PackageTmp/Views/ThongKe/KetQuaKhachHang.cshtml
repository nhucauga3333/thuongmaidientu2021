@using jojo.Models;
@using jojo.DTO;
@{
    Layout = null;
    nhanvien nv = ViewBag.nhanvien as nhanvien;
    List<TKKhachHang> list = ViewBag.khachhang as List<TKKhachHang>;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/image/jojo.ico">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <script src="/Scripts/jquery-3.1.1.min.js"></script>
    <title>KhachHang</title>
    <script>

    </script>
    <style>
        .minheight{
            min-height:370px;
        }
    </style>
</head>
<body>
    @RenderPage("/Views/Share/nav_quanly.cshtml")
    <div class="container minheight">
        <div class="row">
            <h2 class="text-center text-danger">Kết quả thống kê khách hàng</h2>
            <h3>Từ ngày: @ViewBag.tungay</h3>
            <h3>Tới ngày: @ViewBag.toingay</h3>
        </div>
        <br />
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại </th>
                        <th>Địa chỉ</th>
                        <th>Email</th>
                        <th>Số lần</th>
                        <th>Tổng tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < list.Count; i++)
                    {
                        <tr>
                            <td>@list[i].tenkhachhang</td>
                            <td>@list[i].sdtkhachhang</td>
                            <td>@list[i].diachi</td>
                            <td>@list[i].email</td>
                            <td>@list[i].solan</td>
                            <td>@list[i].tongtien</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @RenderPage("/Views/Share/footer.cshtml")
</body>
</html>
